<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/3.1.1 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>it-zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/target/allure-results/</directory>
            <outputDirectory>./allure-results</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/site/</directory>
            <outputDirectory>./site</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>